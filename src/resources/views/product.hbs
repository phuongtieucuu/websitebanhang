{{>header}}
    <h4>{{data.name}}</h4>
<div class="row">
    <div class="col-12 col-md-5">
        <img class="sp" src="/img/{{data._id}}/{{data.img}}" alt="">
    </div>
    <div class="col-12 col-md-7">
        <p>{{data.desc}}</p>
        <p>{{data.price}} $</p>
        {{#if checkLogin}}
        <a href="/cart/add/{{data._id}}">Add cart</a>
        {{else}}
        <span>Bạn cần phải   <a href="/user/login">đăng nhập</a> để mua hàng</span> 
        {{/if}}
    </div>
    <div class="d-flex align-items-center productBox12 flex-wrap col-12 col-md-12">
        {{#each data.images}}
            <div class="col-12 col-md-3">
                <img src="/img/{{../id}}/box/{{this}}" class="imgproduct-img1" alt="">
            </div>
        {{/each}}
    </div>
</div>



